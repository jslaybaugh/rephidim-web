@model Web.Models.AdminUsersView

@{
	ViewBag.Title = "Users";
	Bundles.Reference("content/templates/users");
}

<div class="row">
	<div class="span12 module primary-content">
		<h1>
			<ul class="toolbar">
				<li><a href="#" class="add-btn" title="Add New User">@(Sprite.Image("~/App_Sprites/icon_plus.png"))</a></li>
			</ul>
			Manage Users	
		</h1>
		<div class="scrollable">
			<table cellspacing="5">
				<tr>
					<th>User Name</th>
					<th>Rights</th>
					<th>Active</th>
					<th>Actions</th>
				</tr>
			@if (Model.Users != null && Model.Users.Count() > 0)
			{
				foreach (var user in Model.Users)
				{
					<tr>
						<td>@user.Name</td>
						<td>@user.Rights</td>
						<td><div class="label @(user.IsActive ? "label-success" : "label-important")">@user.IsActive</div></td>
						<td style="white-space:nowrap;"><a class="edit-btn" data-id="@user.Id" href="#" title="Edit">@(Sprite.Image("~/App_Sprites/icon_pen.png"))</a></td>
					</tr>
				}
			}
			</table>
		</div>
	</div>
</div>
<div id="uxUserDialog" class="none"></div>

@section scripts
{
	<script type="text/javascript">
		$(function ()
		{
			var Users = new App.Users();
		});
	</script>
}
