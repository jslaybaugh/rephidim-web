@model Web.Models.AdminEmailsView

@{
    ViewBag.Title = "Emails";
}

<div class="row header-content">
	<div class="span16">
		<h1>Automated Email Notification</h1>
		<div class="module">
			At certain appointed times, the system will periodically check for additions/modifications to files, glossary terms, and scripture references.<br />If you would like to be notified of these changes via email, type your email address in the box below.<br /><br />
			<form class="form-stacked">
				<input type="text" class="span6" placeholder="Your email address" /> <input type="submit" value="Submit" />
			</form><br />
		</div>
	</div>
</div>
<div class="row">
	<div class="span16 module primary-content">
		<h1>
			List of Current Emails
			<p class="small-info">If your name is on the list below, you will receive the automated email. To have your email address changed/removed, please email <a href="mailto:rci@wfbiz.rr.com">rci@wfbiz.rr.com</a>.</p>
		</h1>
		<div class="scrollable">
			
			<ul>
				@if (Model.Emails != null && Model.Emails.Count() > 0)
				{
					foreach (var item in Model.Emails)
					{
						<li>@item
							@if (Model.IsAdmin) { <a class="delete-btn">@(Sprite.Image("~/App_Sprites/icon_delete.png"))</a>}
						</li>
					}
				}
				else
				{
					<li>No emails!</li>
				}
			</ul>
		</div>
	</div>
</div>