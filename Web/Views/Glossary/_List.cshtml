@{
	Layout = null;
}
<ul class="unstyled list-lines">
@foreach (Common.Models.GlossarySummaryMore term in ViewBag.Terms)
{
		<li>
			<a class="term-link" name="@term.Id" data-id="@term.Id" data-term="@term.Term" href="@(Url.Action<GlossaryController>(x=>x.Term(term.Id, null)))">@term.Term</a>
			@if (term.IsNew) {<span class="label label-success">New: @string.Format("{0:M/d/yy h:mm tt}", term.DateCreated)</span>}
			@if (!term.IsNew && term.IsModified) {<span class="label label-warning">Modified: @string.Format("{0:M/d/yy h:mm tt}", term.DateModified)</span>}
		</li>
}
</ul>