@model Common.Models.GlossaryItem

<li>
	<a title="Go to full definition for @Model.Term" href="@(Url.Action<GlossaryController>(x=>x.Term(Model.Id, null)))"><b>@RazorHelpers.Highlight(Model.Term, ViewBag.QueryParts)</b></a>
	@if (Model.IsNew) {<span class="label label-success">New: @string.Format("{0:M/d h:mm tt}", Model.DateCreated)</span>}
	@if (!Model.IsNew && Model.IsModified) {<span class="label label-warning">Modified: @string.Format("{0:M/d h:mm tt}", Model.DateModified)</span>}<br />
	@RazorHelpers.Highlight(Model.Definition, ViewBag.QueryParts)
</li>